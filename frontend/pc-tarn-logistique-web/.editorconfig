# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
# Désactive la limite de caractères (C'est la règle d'or)
max_line_length = 150

[*.ts]
ij_typescript_use_double_quotes = false
ij_typescript_force_quote_style = true

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.html]
# --- Configuration JetBrains Nettoyée ---
ij_html_quote_style = double
ij_html_enforce_quotes = true
# Force le recalcul des lignes pour supprimer les sauts de ligne existants lors du reformatage
# C'est cette ligne qui va réparer tes spans cassés
ij_html_keep_line_breaks = false